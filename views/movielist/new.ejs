<% include ../partials/header %>
<div class="container">
    <div class="row ">
        <div style="margin: 0 auto">
            <h1 class="display-4 text-info" style="text-align:center">ADD NEW MOVIE</h1>
            <form action="/movielist" method="POST" enctype="multipart/form-data">
                 <div class="form-group">
                    <div class="form-group">
                        <label>Movie Name</label>
                        <input type="text" class="form-control" name="movie[moviename]" placeholder="Enter movie name" required/>
                    </div>
                    <div class="form-group">
                         <label for="image">Upload Image</label>
                    <input type="file" id="image" name="image" accept="image/*" required>
                        <small class="form-text text-muted">*Only upload image in any one these format jpeg/jpg/png/gif.</small>
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea name="movie[description]" rows ="10" class="form-control" placeholder="Enter description about movie" required></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-block btn-outline-info">POST</button>
                    </div>
                </div>
            </form>
    <a href="/movielist" class="btn btn-outline-warning">Go back</a>
    </div>
</div>
</div>
<% include ../partials/footer %>