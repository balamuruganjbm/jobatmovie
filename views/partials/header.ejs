    <body>
        <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/movielist" >JOBAT MATINEE</a>
            </div>
            <ul class="nav justify-content-right">
                <% if(!currentUser){ %>
                    
                    <li class="nav-item"><a class="nav-link btn btn-outline-success btn-space" href="/login">LOGIN</a></li>
